<div class='container text-center'>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-signin' }) do |f| %>
    <h1 class='h3 mb-3 font-weight-normal'>Please sign up</h1>

    <%= f.input :email, input_html: { class: 'form-control' }, placeholder: 'Email address', error: 'Email is mandatory, please specify one', label: false %>
    <%= f.input :password, input_html: { id: 'inputPassword', class: 'form-control' }, placeholder: 'Password', hint: false, error_html: { id: 'password_error'}, label: false %>
    <%= f.input :password_confirmation, placeholder: 'Re-type password', input_html: { class: 'form-control' }, label: false %>
    <%= f.submit 'Sign up', class: 'btn btn-lg btn-primary btn-block'%>
    
    <p class='mt-5 mb-3 text-muted'>&copy; 2017-2018</p>
  <% end %>

  <%= render 'devise/shared/links' %>
